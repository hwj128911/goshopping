<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input_rounded_bg"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            >

            <EditText
                android:id="@+id/retrieve_password_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="手机"
                android:textSize="16sp"
                android:inputType="phone"
                android:background="@null"
                android:drawableLeft="@drawable/ic_cellphone_android_grey600_24dp"
                android:drawablePadding="10dp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"/>

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadada"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                >

                <EditText
                    android:id="@+id/retrieve_password_verificationCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:hint="验证码"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:background="@null"

                    android:drawableLeft="@drawable/ic_cloud_grey600_24dp"
                    android:drawablePadding="10dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"/>

            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/retrieve_password_verificationCode_change"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="获取验证码"
                android:textColor="@android:color/white"
                android:background="@drawable/login_button_rounded_bg"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/retrieve_password_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:background="@drawable/login_button_rounded_bg"
        />
</LinearLayout>